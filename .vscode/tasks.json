{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PintOS",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/${input:project}"
            },
            "command": [
                "make"
            ],
            "args": [
                "-j$(nproc)"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Debug PintOS User Program",
            "dependsOn": [
                "Configure QEMU Setting",
                "Run QEMU"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Run QEMU with User Program",
            "type": "shell",
            "command": [
                "${workspaceFolder}/utils/pintos"
            ],
            "args": [
                "--gdb",
                "--fs-disk=10",
                "-p",
                "tests/userprog/halt:halt",
                "--",
                "-q",
                "-f",
                "run",
                "halt ${input:args}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/${input:project}/build"
            },
            "dependsOn": [
                "Configure QEMU Setting"
            ],
            "dependsOrder": "sequence",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "Run QEMU",
            "type": "shell",
            "command": [
                "${workspaceFolder}/utils/pintos"
            ],
            "args": [
                "--gdb",
                "-m 20",
                "--fs-disk=10",
                "--swap-disk=4",
                "-p",
                "tests/userprog/no-vm/multi-oom:multi-oom",
                "--",
                "-q",
                "-f",
                "run",
                "multi-oom ${input:args}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/${input:project}/build"
            },
            "dependsOn": [
                "Build PintOS"
            ],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "Configure QEMU Setting",
            "command": "${workspaceFolder}/utils/vscode-argument-builder",
            "args": [
                "${input:filename}",
                "${input:project}",
                "${workspaceRoot}",
                "Run QEMU"
            ],
            "dependsOn": [
                "Update Exec File List"
            ],
            "problemMatcher": []
        },
        {
            "label": "Update Exec File List",
            "command": "${workspaceFolder}/utils/vscode-filename-configurator",
            "args": [
                "exec",
                "${input:project}",
                "${workspaceFolder}",
                "filename"
            ],
            "dependsOn": [
                "Build PintOS"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "test",
            "description": "Enter the name of the test you want to run",
            "type": "promptString"
        },
        {
            "id": "project",
            "description": "Enter the project to start.",
            "type": "pickString",
            "options": [
                "userprog",
                "vm"
            ]
        },
